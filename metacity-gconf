#!/bin/sh

setting()
{
    gconftool-2 --type $2 --set /apps/metacity/$1 "$3"
}

setting general/theme                    string "nothing"
setting general/mouse_button_modifier    string "<Alt>"
setting general/focus_mode               string mouse
setting general/raise_on_click           bool   false
setting general/num_workspaces           int    9
setting general/compositing_manager      bool   true
