setting global_keybindings/switch_to_workspace_7 string "<Ctrl><Alt>m"
setting global_keybindings/switch_to_workspace_8 string "<Ctrl><Alt>comma"
setting global_keybindings/switch_to_workspace_9 string "<Ctrl><Alt>period"

setting global_keybindings/run_command_1 string "<Ctrl><Alt>x"
